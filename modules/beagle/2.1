#%Module1.0

# This is a TCL file!

proc ModulesHelp { } {
global version prefix

puts stderr "   Add Beagle 2.1"
}

# Making a Path Absolute
# http://wiki.tcl.tk/773
proc makeAbsolute {pathname} {
    file join [pwd] $pathname
}

module-whatis   "Beagle 2.1"

set prefix [makeAbsolute [ file dirname $ModulesCurrentModulefile ]/../../lib/beagle-2.1.2]

setenv beagle_prefix $prefix
prepend-path    LD_RUN_PATH     $prefix/lib
prepend-path    LD_LIBRARY_PATH $prefix/lib
prepend-path    PKG_CONFIG_PATH $prefix/lib/pkgconfig
prepend-path    LIBRARY_PATH    $prefix/lib
prepend-path    CPATH           $prefix/include
